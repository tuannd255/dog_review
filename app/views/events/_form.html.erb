<div class="form-event" style="margin-top: 30px;">
  <%= form_for @event do |f| %>
    <%= render "shared/error_messages", object: @event %>
    <div class="form-group">
      <%= f.label :name_event %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.file_field :image %>
    </div>
    <div class="form-group">
      <%= f.label :start_time %>
      <%= f.text_field :start_time, class: "form-control datepicker" %>
    </div>
    <div class="form-group">
      <%= f.label :end_time %>
      <%= f.text_field :end_time, class: "form-control datepicker" %>
    </div>
    <div class="form-group">
      <%= f.label :location %>
      <%= f.text_field :location, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
    </div>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit (@event.new_record? ? "Create" : "Update"),
      class: "btn btn-success pull-right" %>
  <% end %>
</div>
