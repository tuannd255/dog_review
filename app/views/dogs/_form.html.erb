<div class="form-dog">
  <%= form_for @dog do |f| %>
    <%= render "shared/error_messages", object: @dog %>
    <div class="form-group">
    <%= f.label :category %>
      <%= f.select :category_id, options_for_select(@categories), {},
        {selected: f.object.category_id,class: "form-control"} %>
    </div>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :origin %>
      <%= f.text_field :origin, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.file_field :image %>
    </div>
    <div class="row">
      <div class="col-md-4 col-xs-4">
        <div class="form-group">
          <%= f.label :weight %>
          <%= f.number_field :weight, min: 0, step: 1, class: "form-control",
            placeholder: t("dogs.please_input_weight") %>
        </div>
      </div>
      <div class="col-md-4 col-xs-4">
        <div class="form-group">
          <%= f.label :height %>
          <%= f.number_field :height, min: 0, step: 1, class: "form-control",
            placeholder: t("dogs.please_input_height") %>
        </div>
      </div>
      <div class="col-md-4 col-xs-4">
        <div class="form-group">
          <%= f.label :avg_life_expectancy %>
          <%= f.number_field :avg_life_expectancy, min: 0, step: 1,
            class: "form-control", placeholder: t("dogs.please_input_height") %>
        </div>
      </div>
      <%= f.submit t("button.#{params[:action]}"),
        class: "btn btn-primary pull-right" %>
    </div>
  <% end %>
</div>
