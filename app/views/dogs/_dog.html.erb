<div class="col-md-4">
  <%= link_to dog do %>
    <div class="dog-view">
      <div class="image-dog text-center">
        <%= set_image_dog dog %>
      </div>
      <h2><%= dog.name %></h2>
      <div class="content-dog">
        <div class="rate"></div>
        <div class="row">
          <div class="col-md-6 col-xs-6">
            <b><%= t "dogs.weight" %>: </b>
            <%= dog.weight %>
            <%= t "dogs.kg" %>
          </div>
          <div class="col-md-6 col-xs-6">
            <span class="pull-right">
              <b><%= t "dogs.height" %>: </b>
              <%= dog.height %>
              <%= t "dogs.cm" %>
            </span>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8 col-xs-8">
            <b><%= t "dogs.avg_life_expectancy" %>: </b>
          </div>
          <div class="col-md-4 col-xs-4">
            <span class="pull-right">
              <%= dog.avg_life_expectancy %>
              <%= t "dogs.year" %>
            </span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
