<div class="col-md-4" style="height: 420px;">
  <%= link_to dog do %>
    <div class="dog-view">
      <div class="image-dog text-center">
        <%= set_image_dog dog %>
      </div>
      <% if user_signed_in? && controller_name != "users" %>
        <div id="favorite-<%= dog.id %>">
          <% if check_favorite dog %>
            <%= controller_name == dog ? render("unfavorite", dog: dog) :
              render("dogs/unfavorite", dog: dog) %>
          <% else %>
            <%= render "favorite", dog: dog %>
          <% end %>
        </div>
      <% end %>
      <h2><%= dog.name %></h2>
      <div class="content-dog">
        <div class="rate"></div>
        <div class="row">
          <div class="col-md-6 col-xs-6">
            <b><%= t "dogs.weight" %>: </b>
            <%= dog.weight %>
            <%= t "dogs.kg" %>
          </div>
          <div class="col-md-6 col-xs-6">
            <span class="pull-right">
              <b><%= t "dogs.height" %>: </b>
              <%= dog.height %>
              <%= t "dogs.cm" %>
            </span>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8 col-xs-8">
            <b><%= t "dogs.avg_life_expectancy" %>: </b>
          </div>
          <div class="col-md-4 col-xs-4">
            <span class="pull-right">
              <%= dog.avg_life_expectancy %>
              <%= t "dogs.year" %>
            </span>
          </div>
          <div style="display: inline-flex; margin-left: 30%;">
            <% if dog.rate %>
              <label>Rate</label>: <span class="rating-static
                star-<%= dog.rate * 10 %>"></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="text-center compare-<%= dog.id %>">
      <%= link_to "Add Compare", new_compare_path(dog_id: dog.id), remote: true %>
    </div>
  <% end %>
</div>
