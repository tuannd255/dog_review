<div id="event-<%= event.id %>" class="event"
  style="list-style: none; margin-bottom: 5px;">
  <div class="row">
    <div class="col-md-4"><%= event.name %></div>
    <div class="col-md-4">
      <%= link_to "Edit", edit_event_path(event), class: "btn btn-xs btn-primary" %>
      <%= link_to "Delete", event_path(event), method: :delete,
        data: {confirm: "Arey you sure? "}, class: "btn btn-xs btn-danger" %>
    </div>
  </div>
</div>
