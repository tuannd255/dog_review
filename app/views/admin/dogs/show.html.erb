<% provide :title, @dog.name %>
<div id="dogs">
  <div class="show-dog row">
    <div class="col-md-10 col-md-offset-1">
      <div class="row">
        <div class="col-md-4">
          <div class="dog-view">
            <div class="image-dog text-center">
              <%= set_image_dog @dog %>
            </div>
            <h2><%= @dog.name %></h2>
            <div class="content-dog">
              <div class="rate"></div>
              <div class="row">
                <div class="col-md-6 col-xs-6 center">
                  <b><%= t "dogs.weight" %>: </b>
                  <%= @dog.weight %>
                  <%= t "dogs.kg" %>
                </div>
                <div class="col-md-6 col-xs-6">
                  <b><%= t "dogs.height" %>: </b>
                  <%= @dog.height %>
                  <%= t "dogs.cm" %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 col-xs-6">
                  <b class="pull-right"><%= t "dogs.avg_life_expectancy" %>: </b>
                </div>
                <div class="col-md-6 col-xs-6">
                  <span class="pull-left">
                    <%= @dog.avg_life_expectancy %>
                    <%= t "dogs.year" %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-7 col-md-offset-1">
          <div class="dog-content">
            <p><b><%= t "dogs.name" %>: </b><%= @dog.name %></p>
            <p><b><%= t "dogs.origin" %>: </b><%= @dog.origin %></p>
            <p><b><%= t "dogs.description" %>: </b><%= @dog.description %></p>
            <%= link_to "View all dog", dogs_path, class: "btn btn-info" %>
            <%= link_to "Write a reviews", "#review_content",
              class: "btn btn-primary" %>
            <%= link_to "Edit",edit_dog_path(@dog) if
              current_user?(@dog.user) %>
            <%= link_to t("users.delete"), @dog, method: :delete,
              data: {confirm: t("delete.confirm", name: @dog.name)} if
              current_user?(@dog.user) %>
          </div>
          <br>
          <div>
            <%= render @dog.reviews.order created_at: :desc %>
          </div>
          <hr>
          <div class="form-review">
            <%= render "form_review" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
